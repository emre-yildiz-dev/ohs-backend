# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ohs_db
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1

# Redis Configuration
REDIS_URL=redis://localhost:6379

# S3 Storage Configuration (Optional)
S3_ENDPOINT=http://localhost:3900
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=ohs-bucket
S3_REGION=us-east-1

# TURN Server Configuration (Optional)
TURN_URL_UDP=turn:localhost:3478?transport=udp
TURN_URL_TCP=turn:localhost:3478?transport=tcp
TURN_USERNAME=turn_user
TURN_PASSWORD=turn_password

# Application Configuration
APP_NAME=OHS_Backend_App
APP_ENVIRONMENT=development
STATIC_DIR=static
TEMPLATES_DIR=templates

# Cargo
CARGO_CRATE_NAME=ohs-backend
CARGO_PKG_VERSION=0.1.0

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4

# OpenTelemetry Configuration
# OTLP Exporter endpoint (leave empty for console output in development)
OTEL_EXPORTER_OTLP_ENDPOINT=
# For production with Jaeger: http://localhost:4317
# For production with OTLP Collector: http://otel-collector:4317

# Service identification
OTEL_SERVICE_NAME=ohs-backend
OTEL_SERVICE_VERSION=0.1.0
DEPLOYMENT_ENVIRONMENT=development

# OpenTelemetry Feature Toggles
OTEL_TRACES_ENABLED=true
OTEL_METRICS_ENABLED=true
OTEL_LOGS_ENABLED=true

# OpenTelemetry Sampling Configuration
# Always sample in development, use lower values in production (0.1 = 10%)
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0

# OpenTelemetry Resource Attributes
OTEL_RESOURCE_ATTRIBUTES=service.name=ohs-backend,service.version=0.1.0,deployment.environment=development

# Logging Configuration
RUST_LOG=ohs_backend=debug,tower_http=debug

